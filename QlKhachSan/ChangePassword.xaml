<Window x:Class="QlKhachSan.ChangePassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Đổi Mật Khẩu" Height="300" Width="400" WindowStartupLocation="CenterScreen">
	<Grid>
		<StackPanel Margin="20">
			<TextBlock Text="Đổi Mật Khẩu" FontSize="18" FontWeight="Bold" TextAlignment="Center" Margin="0,0,0,10"/>

			<TextBlock Text="Mật khẩu cũ:"/>
			<PasswordBox x:Name="txtOldPassword" Width="250"/>

			<TextBlock Text="Mật khẩu mới:"/>
			<PasswordBox x:Name="txtNewPassword" Width="250"/>

			<TextBlock Text="Xác nhận mật khẩu mới:"/>
			<PasswordBox x:Name="txtConfirmPassword" Width="250"/>

			<Button Content="Đổi mật khẩu" Width="150" Margin="0,10,0,0" Click="BtnChangePassword_Click"/>
		</StackPanel>
	</Grid>
</Window>

