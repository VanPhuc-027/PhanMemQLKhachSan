<Window x:Class="QlKhachSan.AddPhong"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Thêm Phòng Mới" Height="300" Width="400"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Số phòng -->
        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,0,0,10">
            <TextBlock Text="Số phòng:" Width="100" VerticalAlignment="Center"/>
            <TextBox x:Name="txtSoPhong" Width="250"/>
        </StackPanel>

        <!-- Hạng phòng -->
        <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="0,0,0,10">
            <TextBlock Text="Hạng phòng:" Width="100" VerticalAlignment="Center"/>
            <ComboBox x:Name="cbxHangPhong" Width="250"/>
        </StackPanel>


        <!-- Nút Thêm -->
        <Button Content="Thêm phòng" Grid.Row="4" Width="120" Height="35"
                Background="#0078D7" Foreground="White" FontWeight="Bold"
                HorizontalAlignment="Right" Click="BtnThem_Click"/>
    </Grid>
</Window>

