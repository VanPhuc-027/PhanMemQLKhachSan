<Window x:Class="QlKhachSan.AddHangPhong"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Thêm Hạng Phòng" Height="350" Width="400">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        

        <TextBlock Text="Tên loại phòng:" Grid.Row="1"/>
        <TextBox x:Name="txtTenLoai" Grid.Row="1" Margin="120,0,0,10"/>

        <TextBlock Text="Mô tả:" Grid.Row="2"/>
        <TextBox x:Name="txtMoTa" Grid.Row="2" Margin="120,0,0,10"/>

        <TextBlock Text="Giá theo ngày:" Grid.Row="3"/>
        <TextBox x:Name="txtGiaNgay" Grid.Row="3" Margin="120,0,0,10"/>

        <TextBlock Text="Giá theo giờ:" Grid.Row="4"/>
        <TextBox x:Name="txtGiaGio" Grid.Row="4" Margin="120,0,0,10"/>

        <Button Content="Thêm" Grid.Row="5" HorizontalAlignment="Right" Width="100"
                Click="BtnThem_Click" Margin="0,20,0,0"/>
    </Grid>
</Window>
