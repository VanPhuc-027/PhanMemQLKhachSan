<Window x:Class="QlKhachSan.AddHangHoa"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Thêm Dịch Vụ" Height="300" Width="450">
	<Grid Margin="20">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,5">
			<TextBlock Text="Tên dịch vụ:" Width="100" VerticalAlignment="Center"/>
			<TextBox x:Name="TxtServiceName" Width="250" Height="30" Padding="5"/>
		</StackPanel>

		<StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,5">
			<TextBlock Text="Giá:" Width="100" VerticalAlignment="Center"/>
			<TextBox x:Name="TxtPrice" Width="250" Height="30" Padding="5"/>
		</StackPanel>

		<StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,5">
			<TextBlock Text="Mô tả:" Width="100" VerticalAlignment="Center"/>
			<TextBox x:Name="TxtDescription" Width="250" Height="30" Padding="5"/>
		</StackPanel>

		<StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
			<Button Content="Lưu" Click="BtnSave_Click" Width="100" Height="35" Margin="10"/>
			<Button Content="Hủy" Click="BtnCancel_Click" Width="100" Height="35" Margin="10"/>
		</StackPanel>
	</Grid>
</Window>
